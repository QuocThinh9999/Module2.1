@{
    ViewData["Title"] = "CapNhat";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="d-flex justify-content-center">
    <div class="col-6 px-5 pt-5 border rounded-3 shadow-lg">
        <h2 class="text-center fw-bold pb-4">Cập nhật thông tin sản phẩm</h2>
        <hr />

        <form action="/quan-ly-sanpham/capnhat-sanpham" method="post" enctype="multipart/form-data">
            <input type="text" id="id" name="id" value="@Model.ProductId" aria-describedby="text" hidden>
            <div class="mb-4">
                <label for="ProduceName" class="form-label fw-bolder">Tên sản phẩm</label>
                <input type="text" class="form-control" id="ProduceName" name="product_name" value="@Model.ProductName" aria-describedby="text">
            </div>
            <div class="mb-4">
                <label for="Price" class="form-label fw-bolder">Giá</label>
                <input type="number" class="form-control" id="Price" name="price" min="0" value="@Model.Price" aria-describedby="text">
            </div>
            <div class="mb-4">
                <label for="Description" class="form-label fw-bolder">Giới thiệu</label>
                <input type="text" class="form-control" id="Description" name="gioithieu" value="@Model.Description" aria-describedby="text">
            </div>
            <div class="mb-4">
                <label for="Image" class="form-label fw-bolder">Hình ảnh</label>
                <div class="d-flex justify-content-center align-items-center py-2">
                    <img id="showimage" style="width: 450px; height: 450px;" src="~/images/no_image.jpg" alt="..." />
                </div>
                <input type="file" class="form-control" id="Image" name="hinhanh">
            </div>
            <hr />
            <div class="d-flex align-items-center justify-content-center my-5 gap-5">
                <button type="submit" id="capnhatsanpham" class="btn btn-primary px-4 py-2">Cập nhật thông tin sản phẩm</button>
            </div>
        </form>
    </div>
</div>